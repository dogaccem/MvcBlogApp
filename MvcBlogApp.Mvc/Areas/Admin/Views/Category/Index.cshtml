@using MvcBlogApp.Shared.Utilities.Results.ComplexTypes
@model MvcBlogApp.Entities.Dtos.CategoryListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Categories Index";
}
@if (Model.ResultStatus == ResultStatus.Success)
{
    <div class="card mb-4 mt-3">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Categories
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>IsActive</th>
                            <th>IsDeleted</th>
                            <th>Note</th>
                            <th>Created Date</th>
                            <th>Created By Name</th>
                            <th>Modified Date</th>
                            <th>Modified By Name</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>IsActive</th>
                            <th>IsDeleted</th>
                            <th>Note</th>
                            <th>Created Date</th>
                            <th>Created By Name</th>
                            <th>Modified Date</th>
                            <th>Modified By Name</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var category in Model.Categories)
                        {
                            <tr>
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>@category.IsActive</td>
                                <td>@category.IsDeleted</td>
                                <td>@category.Note</td>
                                <td>@category.CreatedDate.ToShortDateString()</td>
                                <td>@category.CreatedByName</td>
                                <td>@category.ModifiedDate.ToShortDateString()</td>
                                <td>@category.ModifiedByName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@if (Model.ResultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger mt-3">
        @Model.Message
        Dashboard Page <a class="alert-link" asp-area="Admin" asp-controller="Home" asp-action="Index"></a>
    </div>
}
    @section Scripts
{
        <script>
            $(document).ready(function () {
                $('#categoriesTable').DataTable({
                    dom: 
                        "<'row'<'col-sm-3'l><'col-sm-6 text-center'B><'col-sm-3'f>>" +
                            "<'row'<'col-sm-12'tr>>" +
                            "<'row'<'col-sm-5'i><'col-sm-7'p>>",
                    buttons: [
                        {
                            text: 'Add',
                            className: 'btn btn-primary me-md-2',
                            action: function ( e, dt, node, config ) {
                                alert( 'Reload Button activated' );
                            }
                        },
                        {
                            text: 'Reload',
                            className: 'btn btn-primary',
                            action: function (e, dt, node, config) {
                                alert('Reaload Button activated');
                            }
                        }
                    ]
                });
            });
        </script>
    }
